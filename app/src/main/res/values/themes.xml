<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ClockInSystem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
       <item name="windowSplashScreenBackground">@color/blue</item>
       <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
       <item name="postSplashScreenTheme">@style/Base.Theme.ClockInSystem</item>
   </style>


</resources>